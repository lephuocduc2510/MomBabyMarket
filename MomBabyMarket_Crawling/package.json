{
  "name": "mombabymarket-crawler",
  "version": "1.0.0",
  "description": "Professional web crawler for MomBabyMarket case study",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rimraf dist",
    "docker:build": "docker build -t mombabymarket-crawler .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f crawler",
    "crawl": "npm run build && npm start"
  },
  "dependencies": {
    "puppeteer": "^21.5.0",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "fs-extra": "^11.1.1",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "moment": "^2.29.4",
    "p-limit": "^4.0.0",
    "user-agents": "^1.0.1",
    "sharp": "^0.32.6"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/fs-extra": "^11.0.2",
    "typescript": "^5.2.2",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "rimraf": "^5.0.1"
  },
  "keywords": ["crawler", "scraper", "facebook", "instagram", "docker"],
  "author": "Hekate Team",
  "license": "MIT"
}
